<h1>Codeial | <%=title%></h1>

<section>
  <h4>Posts</h4>

  <% if (locals.user){%>

  <form action="/posts/create" id="new-post-form" method="post">
    <textarea
      name="content"
      cols="30"
      rows="4"
      placeholder="Write Something Here..."
    ></textarea>
    <input type="submit" value="Post" />
  </form>

  <%} %>

  <div>
    <ul>
      <% for(let i of posts) {%>

      <li>
        <p><%=i.content%></p>
        <p><%=i.user.name%></p>
      </li>
      <%} %>
    </ul>
  </div>
</section>
